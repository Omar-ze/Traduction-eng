<?xml version="1.0" encoding="UTF-8"?>
<jboss-web xmlns="https://www.jboss.org/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://www.jboss.org/xml/ns/javaee
           https://www.jboss.org/xml/ns/javaee/jboss-web_14_0.xsd"
           version="14.0">

    <context-root>/translator-service</context-root>

    <security-domain>translator-domain</security-domain>

    <resource-ref>
        <res-ref-name>jdbc/TranslatorDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <jndi-name>java:jboss/datasources/TranslatorDS</jndi-name>
    </resource-ref>

</jboss-web>